@model FollowUpRequestViewModel

@{
    ViewBag.Title = "Follow up request";
}

<h1>Follow Up Request</h1>

<form asp-action="followrequest" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <div class="form-group row mb-3">
        <label asp-for="code" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="code" class="form-control" placeholder="Code">
            <span asp-validation-for="code" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" style="width:auto">
                See The Status Of Your Request
            </button>
        </div>
    </div>
</form>