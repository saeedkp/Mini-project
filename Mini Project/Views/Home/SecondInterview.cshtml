@model InterviewViewModel

@{
    ViewBag.Title = "Second Interview Request";
}

<form asp-controller="home" asp-action="secondinterview" method="post" class="mt-3">
    <input hidden asp-for="Id">
    <input hidden asp-for="RequestRefId">
    <input hidden asp-for="UserId">
    <input hidden asp-for="Type">
    <div class="form-group row">
        <label asp-for="DateTime" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="DateTime" asp-format="{0:yyyy-MM-ddTHH:mm}" />
            <span asp-validation-for="DateTime" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Attendance" class="col-sm-2 col-form-label"></label>
        <div class="checkbox">
            <input type="checkbox" asp-for="Attendance">
            <span asp-validation-for="Attendance" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Address" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Address" class="form-control" placeholder="Address">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" placeholder="Description">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Username" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Username" class="form-select mr-sm-2" >
                @foreach (var username in @Model.Names.Keys)
                {
                    <option>@username</option>
                }
            </select>
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>

</form>
